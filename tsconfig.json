{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", "server/*"],
  "include": ["next-env.d.ts", "types/*.d.ts", "**/*.ts", "**/*.tsx"]
}
